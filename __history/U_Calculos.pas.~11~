unit U_Calculos;

interface

type

 { TCalculos }

TCalculos = class
public
  function CalculaAreaTriangulo(Base, Altura : Single): Single;
end;

implementation

{ TCalculos }

{ TCalculos }

function TCalculos.CalculaAreaTriangulo(Base, Altura: Single): Single;
begin
     Result := ((Base * Altura) / 2);
end;

end.
